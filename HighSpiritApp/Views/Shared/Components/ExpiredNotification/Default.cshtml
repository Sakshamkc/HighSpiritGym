@model List<CustomerMembership>

<div class="dropdown">
    <a href="#"
       class="nav-link position-relative dropdown-toggle text-dark"
       data-bs-toggle="dropdown">

        <i class="fa-solid fa-bell fa-lg"></i>

        @if (Model.Count > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle
                         badge rounded-pill bg-danger">
                @Model.Count
            </span>
        }
    </a>

    <ul class="dropdown-menu dropdown-menu-end shadow notification-dropdown">

        <li class="dropdown-header fw-bold">
            Expired Gym Memberships
        </li>

        @if (Model.Count == 0)
        {
            <li class="px-3 text-muted">
                No expired members 🎉
            </li>
        }
        else
        {
            foreach (var m in Model)
            {
                <li class="dropdown-item-text border-bottom">
                    <div class="fw-semibold">@m.Customer.FullName</div>
                    <small class="text-danger">
                        Expired on @m.ExpireDate?.ToShortDateString()
                    </small>
                    <div>
                        <a href="/Customers/Details/@m.CustomerID"
                           class="text-primary small">
                            View
                        </a>
                    </div>
                </li>
            }
        }
    </ul>
</div>
