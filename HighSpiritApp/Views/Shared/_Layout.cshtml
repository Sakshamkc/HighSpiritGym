<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>High Spirit Gym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HighSpiritApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: #f4f6f9;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background: #111827;
            padding-top: 20px;
        }

            .sidebar a {
                color: #cbd5e1;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #1f2933;
                    color: white;
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        .content {
            margin-left: 240px;
            padding: 25px;
        }

        .brand {
            color: white;
            font-size: 18px;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .sidebar-footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            padding: 0 10px;
        }

        .logout-link {
            color: #f87171;
            font-weight: 600;
            text-decoration: none;
            font-size: 14px;
        }

            .logout-link i {
                margin-right: 6px;
            }

            .logout-link:hover {
                text-decoration: underline;
            }

        .footer-text {
            margin-top: 8px;
            font-size: 11px;
            color: #9ca3af;
            font-style: italic;
        }

            .footer-text i {
                margin-right: 4px;
            }

    </style>
</head>
<body class="bg-light">
    <div class="sidebar">
        <div class="brand">
            <img src="/images/highspirit.jpg"
                 style="width:120px;height:auto;display:block;margin-left:20px" />
        </div>
        
        <a href="/"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
        <a href="/Customers"><i class="fa-solid fa-users"></i> Members</a>
        <a href="/Customers/Create"><i class="fa-solid fa-user-plus"></i> Add Member</a>
        <a href="/Customers/Import"><i class="fa-solid fa-file-excel"></i> Import Excel</a>

        <div class="sidebar-footer">
            <a href="/Account/Logout" class="logout-link">
                <i class="fa-solid fa-right-from-bracket"></i> Logout
            </a>
            <div class="footer-text">
                <i class="fa-regular fa-copyright"></i> @DateTime.Now.Year High Spirit Gym
                <br />
                <i class="fa-solid fa-dumbbell"></i> Built with strength & code
            </div>
        </div>

    </div>

    <div class="content">

        <!-- Top utility bar -->
        <div class="d-flex justify-content-end mb-2">
            <button class="btn btn-sm btn-outline-secondary"
                    onclick="toggleFullScreen()"
                    title="Toggle Full Screen">
                <i class="fa-solid fa-expand"></i>
            </button>
        </div>

        @RenderBody()
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
    </script>

    @if (TempData["success"] != null)
    {
        <script>toastr.success("@TempData["success"]");</script>
    }
    @if (TempData["error"] != null)
    {
        <script>toastr.error("@TempData["error"]");</script>
    }
    <script>
        function toggleFullScreen() {
            const icon = document.querySelector(".fa-expand, .fa-compress");

            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
                if (icon) {
                    icon.classList.remove("fa-expand");
                    icon.classList.add("fa-compress");
                }
            } else {
                document.exitFullscreen();
                if (icon) {
                    icon.classList.remove("fa-compress");
                    icon.classList.add("fa-expand");
                }
            }
        }
    </script>

</body>
</html>
