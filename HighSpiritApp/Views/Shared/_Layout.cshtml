<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>High Spirit Gym</title>
    <link rel="icon" type="image/png" href="/images/highspirit.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HighSpiritApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            background: #f4f6f9;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background: #111827;
            padding-top: 20px;
        }

            .sidebar a {
                color: #cbd5e1;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #1f2933;
                    color: white;
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        .content {
            margin-left: 240px;
            padding: 25px;
        }

        .brand {
            color: white;
            font-size: 18px;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .sidebar-footer {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            padding: 0 10px;
        }

        .logout-link {
            color: #f87171;
            font-weight: 600;
            text-decoration: none;
            font-size: 14px;
        }

            .logout-link i {
                margin-right: 6px;
            }

            .logout-link:hover {
                text-decoration: underline;
            }

        .footer-text {
            margin-top: 8px;
            font-size: 11px;
            color: #9ca3af;
            font-style: italic;
        }

            .footer-text i {
                margin-right: 4px;
            }

        .top-bar {
            position: sticky;
            top: 0;
            z-index: 1050;
            background: #f4f6f9;
            padding: 8px 12px;
            border-radius: 6px;
        }

        .notification-dropdown {
            width: 320px;
            max-height: 350px;
            overflow-y: auto;
        }

            .notification-dropdown li {
                font-size: 14px;
            }

            .notification-dropdown .dropdown-item-text {
                padding: 10px 15px;
            }

        .sidebar-dropdown > a {
            cursor: pointer;
        }

        .sidebar .submenu {
            padding-left: 45px;
            font-size: 14px;
            color: #9ca3af;
        }

            .sidebar .submenu:hover {
                background: #1f2933;
                color: #fff;
            }

        .sidebar .fa-chevron-down {
            font-size: 12px;
            margin-top: 4px;
        }

        .dropdown-toggle::after {
            display: none !important;
        }

    </style>
</head>
<body class="bg-light">
    @{
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    }
    <div class="sidebar">
        <div class="brand">
            <img src="/images/highspirit.jpg"
                 style="width:120px;height:auto;display:block;margin-left:20px" />
        </div>

        <a href="/"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
        <div class="sidebar-dropdown">
            <a href="#"
               class="dropdown-toggle"
               data-bs-toggle="collapse"
               data-bs-target="#gymMenu"
               aria-expanded="false">

                <i class="fa-solid fa-users"></i>
                Gym Members
            </a>

            <div class="collapse" id="gymMenu">
                <a href="/Customers" class="submenu">
                    <i class="fa-solid fa-list"></i> View Members
                </a>
                <a href="/Customers/Create" class="submenu">
                    <i class="fa-solid fa-user-plus"></i> Add Member
                </a>
                <a href="/Customers/Import" class="submenu">
                    <i class="fa-solid fa-file-excel"></i> Import Excel
                </a>
            </div>
            <div class="sidebar-dropdown">
                <a href="#"
                   class="dropdown-toggle"
                   data-bs-toggle="collapse"
                   data-bs-target="#boxingMenu"
                   aria-expanded="false">

                    <i class="fa-solid fa-hand-fist"></i>
                    Boxing Members
                </a>

                <div class="collapse @(Context.Request.Path.StartsWithSegments("/Boxing") ? "show" : "")"
                     id="boxingMenu">
                    <a href="/Boxing" class="submenu">
                        <i class="fa-solid fa-list"></i> View Members
                    </a>
                    <a href="/Boxing/Create" class="submenu">
                        <i class="fa-solid fa-user-plus"></i> Add Member
                    </a>
                    <a href="/Boxing/Import" class="submenu">
                        <i class="fa-solid fa-file-excel"></i> Import Excel
                    </a>
                </div>
            </div>

        </div>


        <div class="sidebar-footer">
            <a href="/Account/Logout" class="logout-link">
                <i class="fa-solid fa-right-from-bracket"></i> Logout
            </a>
            <div class="footer-text">
                <i class="fa-regular fa-copyright"></i> @DateTime.Now.Year High Spirit Gym
                <br />
                <i class="fa-solid fa-dumbbell"></i> Built with strength & code
            </div>
        </div>

    </div>

    <div class="content">

        <!-- Top utility bar -->
        <div class="d-flex justify-content-end mb-2">
            <div class="d-flex justify-content-end align-items-center gap-3 mb-3 top-bar">
                <button class="btn btn-sm btn-outline-secondary"
                        onclick="toggleFullScreen()"
                        title="Toggle Full Screen">
                    <i class="fa-solid fa-expand"></i>
                </button>
                @if (controller == "Customers" || controller == "Home" || controller == "Memberships")
                {
                    @await Component.InvokeAsync("ExpiredNotification")
                }
                @if (controller == "Boxing" || controller == "Home")
                {
                    @await Component.InvokeAsync("BoxingDueNotification")
                }

            </div>

        </div>

        @RenderBody()
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
    </script>

    @if (TempData["success"] != null)
    {
        <script>toastr.success("@TempData["success"]");</script>
    }
    @if (TempData["error"] != null)
    {
        <script>toastr.error("@TempData["error"]");</script>
    }
    <script>
        function toggleFullScreen() {
            const icon = document.querySelector(".fa-expand, .fa-compress");

            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
                if (icon) {
                    icon.classList.remove("fa-expand");
                    icon.classList.add("fa-compress");
                }
            } else {
                document.exitFullscreen();
                if (icon) {
                    icon.classList.remove("fa-compress");
                    icon.classList.add("fa-expand");
                }
            }
        }
    </script>

</body>
</html>
