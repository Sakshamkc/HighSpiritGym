<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>High Spirit Gym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HighSpiritApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        body {
            background: #f4f6f9;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            background: #111827;
            padding-top: 20px;
        }

            .sidebar a {
                color: #cbd5e1;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background: #1f2933;
                    color: white;
                }

        .content {
            margin-left: 240px;
            padding: 25px;
        }

        .brand {
            color: white;
            font-size: 18px;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

    </style>
</head>
<body class="bg-light">
    <div class="sidebar">
        <div class="brand">
            <img src="/images/highspirit.jpg"
                 style="width:120px;height:auto;display:block;margin-left:20px" />
        </div>

        <a href="/">📊 Dashboard</a>
        <a href="/Customers">👥 Members</a>
        <a href="/Customers/Create">➕ Add Member</a>
        <a href="/Customers/Import">📥 Import Excel</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };
    </script>

    @if (TempData["success"] != null)
    {
        <script>toastr.success("@TempData["success"]");</script>
    }
    @if (TempData["error"] != null)
    {
        <script>toastr.error("@TempData["error"]");</script>
    }

</body>
</html>
