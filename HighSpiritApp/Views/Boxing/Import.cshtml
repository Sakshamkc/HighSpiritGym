@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-3"> Import Boxing Members (Excel)</h4>

<form asp-action="Import"
      method="post"
      enctype="multipart/form-data">

    <div class="mb-3">
        <label class="form-label">Select Excel File</label>
        <input type="file"
               name="file"
               class="form-control"
               accept=".xlsx"
               required />
    </div>

    <button class="btn btn-success">
        Import
    </button>
    <a href="/Boxing" class="btn btn-secondary">Cancel</a>

</form>


<div class="mt-3 text-muted" style="font-size:13px;">
    Excel headers must be exactly:
    Name, JoinDate, GuardianName, GuardianContact, PerMonthClass, Cash, Esewa, Due, Remarks
</div>
