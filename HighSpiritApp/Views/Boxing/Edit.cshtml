@model HighSpiritApp.Models.Boxing.BoxingMember
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow">
    <div class="card-body">

        <h4 class="mb-4">✏️ Edit Boxing Member</h4>

        <!-- Existing Photo -->
        <div class="text-center mb-4">
            @if (Model.Photo != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)"
                     class="rounded shadow"
                     style="width:150px;height:150px;object-fit:cover;" />
            }
            else
            {
                <i class="fa-solid fa-child fa-5x text-secondary"></i>
            }
        </div>

        <form method="post" enctype="multipart/form-data" class="row g-3">

            <input type="hidden" asp-for="BoxingMemberID" />

            <div class="col-md-6">
                <label class="form-label">Kid Name</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Joined Date</label>
                <input asp-for="JoinDate" type="date" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Guardian Name</label>
                <input asp-for="GuardianName" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Guardian Contact</label>
                <input asp-for="GuardianContact" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-control" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Remarks</label>
                <input asp-for="Remarks" class="form-control" />
            </div>

            <!-- Upload new photo -->
            <div class="col-md-12">
                <label class="form-label">Change Photo (optional)</label>
                <input type="file" name="photoFile" class="form-control" accept="image/*" />
            </div>

            <div class="col-12 mt-3">
                <button class="btn btn-success">
                    <i class="fa-solid fa-check"></i> Update
                </button>
                <a href="/Boxing" class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>
